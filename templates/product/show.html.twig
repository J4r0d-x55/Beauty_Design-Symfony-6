{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body%}

<div class="row bloc-show">
    <div class="col-md-4">
        <img src="/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-8">
        <h3 class="show-product">{{ product.name }}</h3>
        <p class="show-subtitle">{{ product.subtitle }}<p>
        <span class="product-show-price">{{ (product.price / 100) |number_format(2, ',', '.') }} â‚¬</span>
        <hr>
        <p>
            {{ product.description }}
        </p>
        <a href="{{ path('cart_add', { 'id' : product.id }) }}" class="btn btn-light">Ajouter au panier</a>
    </div>
</div>

{% endblock %}